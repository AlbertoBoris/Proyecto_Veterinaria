@model Veterinaria.Models.PedidoSerOriginal

@{
    ViewBag.Title = "editarPedido";
    Layout = "~/Views/Shared/_LayoutAdministrador.cshtml";
}

<h2>Atender Pedido</h2>

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()
    
<div class="form-horizontal">
    <h4>Cambiar Estado del Pedido</h4>
    <hr />
    @Html.ValidationSummary(true, "", new { @class = "text-danger" })
    <div style="width:45%; float:left">
        <div class="form-group">
            @Html.LabelFor(model => model.ID_PEDI, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.EditorFor(model => model.ID_PEDI, new { htmlAttributes = new { @class = "form-control-plaintext" } })
                @Html.ValidationMessageFor(model => model.ID_PEDI, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.FECHA_PEDI, htmlAttributes: new { @class = "control-label col-md-4" })
            <div class="col-md-10">
                @Html.TextBoxFor(model => model.FECHA_PEDI, "{0:yyyy/MM/dd}")
                @Html.ValidationMessageFor(model => model.FECHA_PEDI, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.ID_USU, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.EditorFor(model => model.ID_USU, new { htmlAttributes = new { @class = "form-control-plaintext" } })
                @Html.ValidationMessageFor(model => model.ID_USU, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.ID_SERV, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.EditorFor(model => model.ID_SERV, new { htmlAttributes = new { @class = "form-control-plaintext" } })
                @Html.ValidationMessageFor(model => model.ID_SERV, "", new { @class = "text-danger" })
            </div>
        </div>

    </div>

    <div style="width:45%; float:right">      

        <div class="form-group">
            @Html.LabelFor(model => model.ID_HORAR, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.EditorFor(model => model.ID_HORAR, new { htmlAttributes = new { @class = "form-control-plaintext" } })
                @Html.ValidationMessageFor(model => model.ID_HORAR, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.ID_HORA, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.EditorFor(model => model.ID_HORA, new { htmlAttributes = new { @class = "form-control-plaintext" } })
                @Html.ValidationMessageFor(model => model.ID_HORA, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.IMPORTE, htmlAttributes: new { @class = "control-label col-md-4" })
            <div class="col-md-10">
                @Html.EditorFor(model => model.IMPORTE, new { htmlAttributes = new { @class = "form-control-plaintext" } })
                @Html.ValidationMessageFor(model => model.IMPORTE, "", new { @class = "text-danger" })
            </div>
        </div>
    </div>
      
        <div class="form-group">
            @Html.LabelFor(model => model.ID_ESTA, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.DropDownListFor(model => model.ID_ESTA, ViewBag.estado as SelectList,
                                    "Cambiar Estado", new { @class = "form-control " })
            </div>
        </div>

        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Guardar" class="btn btn-primary" />
            </div>
        </div>
    </div>
    }

