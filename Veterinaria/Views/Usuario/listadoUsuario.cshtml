@model IEnumerable<Veterinaria.Models.Usuario>

@{
    ViewBag.Title = "listadoUsuario";
    Layout = "~/Views/Shared/_LayoutAdministrador.cshtml";
}

<div class="card shadow mb-4">
    <div class="card-header py-3">
        <h6 class="m-0 font-weight-bold text-primary">Lista de Servicios Veterinarios</h6>
    </div>
    <div class="card-body">
        <table class="table table-bordered" id="dataTable" width="100%" cellspacing="0">
            <thead class="thead-light">
                <tr>
                    <th>
                        @Html.DisplayNameFor(model => model.NOMBRES)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.NOMB_USU)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.CORREO_USU)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.FECHA_NACI)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.SEXO_USU)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.ID_DIST)
                    </th>
                    <th></th>
                </tr>
            </thead>

            @foreach (var item in Model)
            {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.NOMBRES)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.NOMB_USU)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.CORREO_USU)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.FECHA_NACI)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.SEXO_USU)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.ID_DIST)
                    </td>
                    <td>
                        @Html.ActionLink("Ed ", "editarUsuario", new { id = item.ID_USU },
                                                                    new { @class = "glyphicon glyphicon-pencil" })|
                        @Html.ActionLink("Det", "detalleUsuario", new { id = item.ID_USU },
                                                            new { @class = "glyphicon glyphicon-plus-sign" })|
                        @Html.ActionLink("Eli", "eliminarUsuario", new { id = item.ID_USU },
                                                                new { @class = "glyphicon glyphicon-trash" })|
                    </td>
                </tr>
            }

        </table>
    </div>
</div>