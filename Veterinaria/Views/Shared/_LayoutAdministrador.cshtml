<!DOCTYPE html>
<html>
<head>
    <meta http-equiv="Content-Type" content="text/html; charset=utf-8" />
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - Mi aplicación ASP.NET</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")
    <link href="~/Content/estiloAdmin.css" rel="stylesheet" />
</head>
<body>

    




    <div id="container">
        <br />
        <div id="contenido">
            <div id="banner">
                <nav id="menuAdmin">
                    <ul class="nav">
                        @if (User.Identity.IsAuthenticated)
                        {
                            <li>@Html.ActionLink("Inicio", "Index", "Profile")</li>
                            <li>
                                <a href="#">USUARIOS</a>
                                <ul>
                                    <li>@Html.ActionLink("Registro de Usuarios", "registrarUsuario", "Usuario")</li>
                                    <li>@Html.ActionLink("Lista de Usuarios", "listadoUsuario", "Usuario")</li>
                                    <li>@Html.ActionLink("Lista de Mascotas", "listadoMascota", "Mascota")</li>
                                </ul>
                            </li>
                            <li>
                                <a href="#">Productos</a>
                                <ul>
                                    <li>@Html.ActionLink("Registro de Productos", "registroProducto", "Producto")</li>
                                    <li>@Html.ActionLink("Lista de Productos", "listadoProducto", "Producto")</li>

                                </ul>
                            </li>
                            <li>
                                <a href="#">Servicios</a>
                                <ul>
                                    <li>@Html.ActionLink("Registro de Servicios", "registroServicio", "Servicio")</li>
                                    <li>@Html.ActionLink("Lista de Servicios", "listadoServicio", "Servicio")</li>
                                </ul>
                            </li>

                            <li>@Html.ActionLink("SALIR", "Logout", "Home")</li>
                        }
                    </ul>
                </nav>
            </div>

            <br />
            <br />

            <section>
                @RenderBody()
            </section>




            <!--****** Carrusel******* -->
            <div id="carrusel">
                <div id="myCarousel" class="carousel slide" data-ride="carousel">
                    <!-- Indicators -->
                    <ol class="carousel-indicators">
                        <li data-target="#myCarousel" data-slide-to="0" class="active"></li>
                        <li data-target="#myCarousel" data-slide-to="1"></li>
                        <li data-target="#myCarousel" data-slide-to="2"></li>
                    </ol>

                    <!-- Wrapper for slides -->
                    <div class="carousel-inner">
                        <div class="item imgCarrusel active">
                            <img src="~/Images/Carrusel/banner1-mascotas.jpg" alt="Mascota" style="width: 100%;">
                        </div>

                        <div class="item imgCarrusel">
                            <img src="~/Images/Carrusel/banner2-mascotas.jpg" alt="Perro" style="width: 100%;">
                        </div>

                        <div class="item imgCarrusel">
                            <img src="~/Images/Carrusel/banner3-mascotas.jpg" alt="Gato" style="width:100%;">
                        </div>
                    </div>

                    <!-- Left and right controls -->
                    <a class="left carousel-control" href="#myCarousel" data-slide="prev">
                        <span class="glyphicon glyphicon-chevron-left"></span>
                        <span class="sr-only">Previous</span>
                    </a>
                    <a class="right carousel-control" href="#myCarousel" data-slide="next">
                        <span class="glyphicon glyphicon-chevron-right"></span>
                        <span class="sr-only">Next</span>
                    </a>
                </div>
            </div>





            <footer>
                <img class="foot" src="~/Images/principal/jottlyfooterstyles.png" alt="Footer" />
            </footer>
        </div>

        @Scripts.Render("~/bundles/jquery")
        @Scripts.Render("~/bundles/bootstrap")
        @RenderSection("scripts", required: false)
   </div>
</body>
</html>
