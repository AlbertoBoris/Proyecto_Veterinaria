<!DOCTYPE html>
<html>
<head>
    <meta http-equiv="Content-Type" content="text/html; charset=utf-8" />
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - Mi aplicación ASP.NET</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")
</head>
<body>
    <div id="container">
        <br />
        <div id="contenido">
            <div id="banner">
                <img class="imgbanner" src="~/Images/principal/cooltext381844845557281.png" alt="Logo" style="width:20%; height:54px; float:left; background-color:#1849AB" />
                <nav id="menuArriba">
                    <ul class="menu">
                        @if (User.Identity.IsAuthenticated)
                        {
                            <li>@Html.ActionLink("Inicio", "IndexUsuario", "Profile")</li>
                            <li>@Html.ActionLink("Productos", "ComprasVideojuegos", "Videojuego")</li>
                            <li>@Html.ActionLink("Servicios", "carritoCompras", "Tienda_pelicula")</li>
                            <li>@Html.ActionLink("Salir", "Logout", "Home")</li>
                        }
                    </ul>
                </nav>
            </div>

            <br />

            <!--****** Carrusel******* -->
            <div id="carrusel">
                <div id="myCarousel" class="carousel slide" data-ride="carousel">
                    <!-- Indicators -->
                    <ol class="carousel-indicators">
                        <li data-target="#myCarousel" data-slide-to="0" class="active"></li>
                        <li data-target="#myCarousel" data-slide-to="1"></li>
                        <li data-target="#myCarousel" data-slide-to="2"></li>
                    </ol>

                    <!-- Wrapper for slides -->
                    <div class="carousel-inner">
                        <div class="item imgCarrusel active">
                            <img src="~/Images/Carrusel/banner1-mascotas.jpg" alt="Mascota" style="width: 100%;">
                        </div>

                        <div class="item imgCarrusel">
                            <img src="~/Images/Carrusel/banner2-mascotas.jpg" alt="Perro" style="width: 100%;">
                        </div>

                        <div class="item imgCarrusel">
                            <img src="~/Images/Carrusel/banner3-mascotas.jpg" alt="Gato" style="width:100%;">
                        </div>
                    </div>

                    <!-- Left and right controls -->
                    <a class="left carousel-control" href="#myCarousel" data-slide="prev">
                        <span class="glyphicon glyphicon-chevron-left"></span>
                        <span class="sr-only">Previous</span>
                    </a>
                    <a class="right carousel-control" href="#myCarousel" data-slide="next">
                        <span class="glyphicon glyphicon-chevron-right"></span>
                        <span class="sr-only">Next</span>
                    </a>
                </div>
            </div>



            <section id="cuerpo">
                <section>
                    @RenderBody()
                </section>

                <div id="juegos-izquierda">

                    <h2 class="titulo-juegos">Nuevos Productos</h2>

                    <img class="cara-img" src="~/Images/productos/200972-0000-001.jpg" alt="Caratula" />

                    <img class="cara-img" src="~/Images/productos/200980-0000-001.jpg" alt="Caratula" />

                    <img class="cara-img" src="~/Images/productos/825404-0000-001.jpg" alt="Caratula" />

                    <img class="cara-img" src="~/Images/productos/MK724ZJ9TA-001.jpg" alt="Caratula" />

                    <img class="cara-img" src="~/Images/productos/MKT6U8V4IM-001.jpg" alt="Caratula" />

                    <img class="cara-img" src="~/Images/productos/825404-0000-001.jpg" alt="Caratula" />

                    <img class="cara-img" src="~/Images/productos/200980-0000-001.jpg" alt="Caratula" />

                    <img class="cara-img" src="~/Images/productos/200972-0000-001.jpg" alt="Caratula" />

                </div>

                <div id="formulario-derecha">


                    <h2 class="titulo-juegos">Ultimas Noticia</h2>

                    <a href="https://www.burgosnoticias.com/actualidad/035225/la-primavera-tambien-altera-a-las-mascotas">
                        <img alt="Noticia" src="https://estaticos2.burgosnoticias.com/resources/files/2020/12/5/1607171980553perro-dalmatadn.png" style="width:100%; border:thick; border-radius:10px;" />
                        <h4 style="text-align: center">La primavera también "altera" a las mascotas</h4>
                    </a>

                    <a href="https://www.vertigopolitico.com/bienestar/salud/notas/la-mejor-proteccion-contra-enfermedades-de-las-mascotas-es-la-vacunacion">
                        <img alt="Noticia" src="https://tvazteca.brightspotcdn.com/dims4/default/acc8bec/2147483647/strip/true/crop/1920x1280+0+0/resize/968x645!/format/jpg/quality/80/?url=https%3A%2F%2Ftvazteca.brightspotcdn.com%2Fdf%2Fb1%2F8d88c953436e9f86c1848032ab9e%2Fperro-con-mujer.jpg" style="width:100%; border:thick; border-radius:10px;" />
                        <h4 style="text-align: center">La mejor protección contra enfermedades</h4>
                    </a>
                </div>



            </section>

            <footer>
                <img class="foot" src="~/Images/principal/jottlyfooterstyles.png" alt="Footer" />
            </footer> <br /> <br />
        </div>



        @Scripts.Render("~/bundles/jquery")
        @Scripts.Render("~/bundles/bootstrap")
        @RenderSection("scripts", required: false)
    </div>
</body>
</html>