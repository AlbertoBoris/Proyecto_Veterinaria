@model IEnumerable<Veterinaria.Models.PedidoProd>

@{
    ViewBag.Title = "listadoPedidoProd";
    Layout = "~/Views/Shared/_LayoutAdministrador.cshtml";
}

<div class="card shadow mb-4">
    <div class="card-header py-3">
        <h6 class="m-0 font-weight-bold text-primary">Lista de Pedidos de Productos</h6>
    </div>
    <div class="card-body">
        <table class="table table-bordered" id="dataTable" width="100%" cellspacing="0">
            <thead class="thead-light">
                <tr>
                    <th>
                        @Html.DisplayNameFor(model => model.FECHA_PEDI)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.ID_USU)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.ID_PROD)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.IMPORTE)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.ID_ESTA)
                    </th>
                    <th></th>
                </tr>
            </thead>

            @foreach (var item in Model)
            {
                <tr>

                    <td>
                        @Html.DisplayFor(modelItem => item.FECHA_PEDI)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.ID_USU)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.ID_PROD)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.IMPORTE)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.ID_ESTA)
                    </td>
                    <td>
                        @Html.ActionLink("Ver      ", "detallePedido", new { id = item.ID_PEDI })|
                        @Html.ActionLink("Atender  ", "editarPedido", new { id = item.ID_PEDI })
                    </td>
                </tr>
            }

        </table>
    </div>
</div>