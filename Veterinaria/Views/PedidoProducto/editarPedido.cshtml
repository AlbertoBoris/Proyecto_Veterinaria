@model Veterinaria.Models.PedidoProdOriginal

@{
    ViewBag.Title = "editarPedido";
    Layout = "~/Views/Shared/_LayoutAdministrador.cshtml";
}

<h2>Atender Pedido</h2>

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()
    
<div class="form-horizontal">
    <h4>Cambiar Estado del Pedido</h4>
    <hr />
    @Html.ValidationSummary(false, "", new { @class = "text-danger" })
    <div style="width:45%; float:left">
        <div class="form-group">
            @Html.LabelFor(model => model.ID_PEDI, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.EditorFor(model => model.ID_PEDI, new { htmlAttributes = new { @class = "form-control-plaintext" } })
                @Html.ValidationMessageFor(model => model.ID_PEDI, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.FECHA_PEDI, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.EditorFor(model => model.FECHA_PEDI, new { htmlAttributes = new { @class = "form-control-plaintext" } })
                @Html.ValidationMessageFor(model => model.FECHA_PEDI, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.ID_USU, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.EditorFor(model => model.ID_USU, new { htmlAttributes = new { @class = "form-control-plaintext " } })
                @Html.ValidationMessageFor(model => model.ID_USU, "", new { @class = "text-danger" })
            </div>
        </div>
    </div>

    <div style="width:45%; float:right">

        <div class="form-group">
            @Html.LabelFor(model => model.ID_PROD, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.EditorFor(model => model.ID_PROD, new { htmlAttributes = new { @class = "form-control-plaintext" } })
                @Html.ValidationMessageFor(model => model.ID_PROD, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.CONTADOR, htmlAttributes: new { @class = "control-label col-md-2 " })
            <div class="col-md-10">
                @Html.EditorFor(model => model.CONTADOR, new { htmlAttributes = new { @class = "form-control-plaintext" } })
                @Html.ValidationMessageFor(model => model.CONTADOR, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.IMPORTE, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.EditorFor(model => model.IMPORTE, new { htmlAttributes = new { @class = "form-control-plaintext", } })
                @Html.ValidationMessageFor(model => model.IMPORTE, "", new { @class = "text-danger" })
            </div>
        </div>
    </div>
    <br /><br /><br /><br /><br /><br /><br /><br /><br /><br /><br /><br />
    <div class="form-group">
        @Html.LabelFor(model => model.ID_ESTA, htmlAttributes: new { @class = "control-label col-md-2" })
        <div class="col-md-10">
            @Html.DropDownListFor(model => model.ID_ESTA, ViewBag.estado as SelectList,
                                "Cambiar Estado", new { @class = "form-control " })
        </div>
    </div>

    <div class="form-group">
        <div class="col-md-offset-2 col-md-10">
            <input type="submit" value="Guardar" class="btn btn-primary" />
        </div>
    </div>
</div>
}

