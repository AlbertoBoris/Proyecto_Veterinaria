@model Veterinaria.Models.PedidoProdOriginal

@{
    ViewBag.Title = "registroPedido";
    Layout = "~/Views/Shared/_LayoutUsuario.cshtml";
}

<h2>Pedido de Producto</h2>


@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

    <div class="form-horizontal" style="float: left; width: 55%;  margin-left: 10px" >
        <h4>Llene los Campos</h4>
        <hr />
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        <div class="form-group">
            @Html.LabelFor(model => model.ID_PEDI, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.EditorFor(model => model.ID_PEDI, new { htmlAttributes = new { @class = "form-control", @Value = ViewBag.codigo, @readonly = "readonly" } })
                @Html.ValidationMessageFor(model => model.ID_PEDI, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.FECHA_PEDI, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.EditorFor(model => model.FECHA_PEDI, new { htmlAttributes = new { @class = "form-control", @Value = ViewBag.fecha, @readonly = "readonly" } })
                @Html.ValidationMessageFor(model => model.FECHA_PEDI, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.ID_USU, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.EditorFor(model => model.ID_USU, new { htmlAttributes = new { @class = "form-control", @Value = ViewBag.Id, @readonly = "readonly" } })
                @Html.ValidationMessageFor(model => model.ID_USU, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.ID_PROD, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.EditorFor(model => model.ID_PROD, new { htmlAttributes = new { @class = "form-control", @Value = ViewBag.prod, @readonly = "readonly" } })
                @Html.ValidationMessageFor(model => model.ID_PROD, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.ID_ESTA, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.EditorFor(model => model.ID_ESTA, new { htmlAttributes = new { @class = "form-control", @Value = "E004", @readonly = "readonly" } })
                @Html.ValidationMessageFor(model => model.ID_ESTA, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.CONTADOR, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.EditorFor(model => model.CONTADOR, new { htmlAttributes = new { @class = "form-control", @onchange = "computeLoan()", @AutoPostBack = "true", @max = 10, @min = 1 } })
                @Html.ValidationMessageFor(model => model.CONTADOR, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.IMPORTE, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.EditorFor(model => model.IMPORTE, new { htmlAttributes = new { @class = "form-control", @onchange = "computeLoan()", @AutoPostBack = "true", @readonly = "readonly" } })
                @Html.ValidationMessageFor(model => model.IMPORTE, "", new { @class = "text-danger" })
                <p>Precio unitario: S/.@ViewBag.prec </p> 
                
            </div>
        </div>

        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Comprar" class="btn btn-primary" />
            </div>
        </div>
    </div>


    <img style="float: right;  width: 40%" src="@Url.Content(ViewBag.foto)" />

}

<script>

    function computeLoan() {
        var contador = document.getElementById('CONTADOR').value;
        var precio = @ViewBag.prec;
        document.getElementById('IMPORTE').value = precio * contador;
    }


</script>

