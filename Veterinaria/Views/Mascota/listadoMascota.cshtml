@model IEnumerable<Veterinaria.Models.Mascota>

@{
    ViewBag.Title = "Lista de Mascotas";
    Layout = "~/Views/Shared/_LayoutAdministrador.cshtml";
}

<h2>Lista de Mascotas</h2>

<p>
    <button type="button" class="btn btn-light"> @Html.ActionLink("Agregar una Mascota", "registrarMascota") </button>
</p>
<table class="table table-bordered">
    <thead class="thead-light">
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.ID_MASC)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.NOMBRE)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.ANIMAL)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.RAZA)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.EDAD)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.FECHA_NACI)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.ID_USU)
            </th>
            <th></th>
        </tr>
    <thead>

        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.ID_MASC)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.NOMBRE)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.ANIMAL)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.RAZA)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.EDAD)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.FECHA_NACI)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.ID_USU)
                </td>
                <td>
                    @Html.ActionLink("Ed.", "editarMascota", new { id = item.ID_MASC }) |
                    @Html.ActionLink("Det.", "detalleMascota", new { id = item.ID_MASC }) |
                    @Html.ActionLink("Eli.", "eliminarMascota", new { id = item.ID_MASC })
                </td>
            </tr>
        }

</table>
