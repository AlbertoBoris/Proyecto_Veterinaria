@model IEnumerable<Veterinaria.Models.PedidoProdOriginal>

@{
    ViewBag.Title = "listadoPedidoProdxUsuario";
    Layout = "~/Views/Shared/_LayoutUsuario.cshtml";
}

<h2>Lista de Pedidos del Usuario</h2>
<h4>*Los Pedidos expiran en 24 Horas si no son pagados*</h4>
<img style="width: 100%" src="~/Images/principal/Estados.PNG" />
<table class="table table-bordered">
    <thead class="thead-dark">
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.FECHA_PEDI)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.ID_PROD)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.ID_ESTA)
            </th>
        </tr>
    </thead>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.FECHA_PEDI)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.ID_PROD)
            </td>
            <td style="color: #4e73df">
                @Html.DisplayFor(modelItem => item.ID_ESTA)
            </td>
            <td>
                @Html.ActionLink("Detalles", "detallePedido", new { id = item.ID_PEDI })|
                @Html.ActionLink("Cancelar", "eliminarPedidoProd", new { id = item.ID_PEDI })
            </td>
        </tr>
    }

</table>
