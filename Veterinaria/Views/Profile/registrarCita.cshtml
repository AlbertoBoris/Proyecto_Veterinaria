@model Veterinaria.Models.CitaOriginal

@{
    ViewBag.Title = "registrarCita";
    Layout = "~/Views/Shared/_LayoutUsuario.cshtml";
}

<h2>Solicitar una Cita</h2>

@using (Html.BeginForm()) 
{
    @Html.AntiForgeryToken()
    
    <div class="form-horizontal">
        <hr />
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        <div class="form-group">
            @Html.LabelFor(model => model.ID_CITA, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.EditorFor(model => model.ID_CITA, new { htmlAttributes = new { @class = "form-control", @Value = ViewBag.codigo, @readonly = "readonly"} })
                @Html.ValidationMessageFor(model => model.ID_CITA, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.FECHA_REG, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.EditorFor(model => model.FECHA_REG, new { htmlAttributes = new { @class = "form-control", @Value = ViewBag.fecha, @readonly = "readonly" } })
                @Html.ValidationMessageFor(model => model.FECHA_REG, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.ID_USU, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.EditorFor(model => model.ID_USU, new { htmlAttributes = new { @class = "form-control", @Value = ViewBag.usuario, @readonly = "readonly" } })
                @Html.ValidationMessageFor(model => model.ID_USU, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.ID_AREA, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.DropDownListFor(model => model.ID_AREA, ViewBag.area as SelectList,
                               "Seleccione el Area", new { @class = "form-control" })
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.ID_MASC, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.DropDownListFor(model => model.ID_MASC, ViewBag.mascota as SelectList,
                              "Seleccione la Mascota", new { @class = "form-control" })
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.ID_HORAR, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.DropDownListFor(model => model.ID_HORAR, ViewBag.horario as SelectList,
                               "Seleccione el Horario", new { @class = "form-control" })
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.ID_HORA, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.DropDownListFor(model => model.ID_HORA, ViewBag.hora as SelectList,
                             "Seleccione la Hora", new { @class = "form-control" })
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.ID_ESTA, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.EditorFor(model => model.ID_ESTA, new { htmlAttributes = new { @class = "form-control", @Value = "E004", @readonly = "readonly" } })
                @Html.ValidationMessageFor(model => model.ID_ESTA, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.IMPORTE, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.EditorFor(model => model.IMPORTE, new { htmlAttributes = new { @class = "form-control", @Value = "40", @readonly = "readonly" } })
                @Html.ValidationMessageFor(model => model.IMPORTE, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Solicitar Cita" class="btn btn-primary" />
            </div>
        </div>
    </div>
}

