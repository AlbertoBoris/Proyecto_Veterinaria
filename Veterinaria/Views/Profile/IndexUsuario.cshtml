@model Veterinaria.Models.Usuario

@{
    ViewBag.Title = "IndexUsuario";
    Layout = "~/Views/Shared/_LayoutUsuario.cshtml";
}


<!--****** Carrusel******* -->
<div id="carrusel">
    <div id="myCarousel" class="carousel slide" data-ride="carousel">
        <!-- Indicators -->
        <ol class="carousel-indicators">
            <li data-target="#myCarousel" data-slide-to="0" class="active"></li>
            <li data-target="#myCarousel" data-slide-to="1"></li>
            <li data-target="#myCarousel" data-slide-to="2"></li>
        </ol>

        <!-- Wrapper for slides -->
        <div class="carousel-inner">
            <div class="item imgCarrusel active">
                <img src="~/Images/Carrusel/banner1-mascotas.jpg" alt="Mascota" style="width: 100%;">
            </div>

            <div class="item imgCarrusel">
                <img src="~/Images/Carrusel/banner2-mascotas.jpg" alt="Perro" style="width: 100%;">
            </div>

            <div class="item imgCarrusel">
                <img src="~/Images/Carrusel/banner3-mascotas.jpg" alt="Gato" style="width:100%;">
            </div>
        </div>

        <!-- Left and right controls -->
        <a class="left carousel-control" href="#myCarousel" data-slide="prev">
            <span class="glyphicon glyphicon-chevron-left"></span>
            <span class="sr-only">Previous</span>
        </a>
        <a class="right carousel-control" href="#myCarousel" data-slide="next">
            <span class="glyphicon glyphicon-chevron-right"></span>
            <span class="sr-only">Next</span>
        </a>
    </div>
</div>

<div style="width: 50%; float:left; margin-left: 10px">

    <h3>Bienvenido(a) @ViewBag.nombre</h3>

    <img style="width: 20%; float:left" src="https://th.bing.com/th/id/OIP.130JlLu_GSzrXkjgW3swqAHaHa?pid=ImgDet&rs=1" alt="Alternate Text" />

    <hr />
    <dl style="float: right; margin-right: 132px" class="dl-horizontal">
        <dt>
            @Html.DisplayNameFor(model => model.ID_USU)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.ID_USU)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.NOMBRES)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.NOMBRES)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.NOMB_USU)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.NOMB_USU)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.ID_DIST)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.ID_DIST)
        </dd>

    </dl>

</div>

<div style="width:49%; float: right; margin-bottom: 3px">
    <h3>Panel de Control de Usuario:</h3>
    <div style="width:50%; background-color: #4e73df; height: 70px; float: left; border-style: solid; border-radius: 7px; border-color: #1849AB">
        <img style="float: left; width:50px; margin-top: 3px" src="https://image.flaticon.com/icons/png/512/2809/2809936.png" alt="Alternate Text" />
        <h8 style="color:white; padding-left: 20px"> *Administrar Citas* </h8>
        <a style="color:white; padding-left: 20px; margin-right: 50px" @Html.ActionLink("Registrar una Cita", "registrarCita", new { id = @Html.DisplayFor(model => model.ID_USU) }) </a>
        <a style="color:white; padding-left: 20px" @Html.ActionLink("Lista de Citas", "listadoCitaxUsuario", new { id = @Html.DisplayFor(model => model.ID_USU) })</a>
    </div>

    <div style="width:49%; background-color: #4e73df; height: 70px; float: right; border-style: solid; border-radius: 7px; border-color: #1849AB">
        <img style="float: left; width:50px; margin-top: 3px" src="https://image.flaticon.com/icons/png/512/943/943579.png" alt="Alternate Text" />
        <br />
        <a style="color:white; padding-left: 20px" @Html.ActionLink("Edita tu Informacion", "editarUsuario", new { id = @Html.DisplayFor(model => model.ID_USU) }) </a>
    </div>
</div>

<br />
